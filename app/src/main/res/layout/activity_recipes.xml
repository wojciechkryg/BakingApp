<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wojdor.bakingapp.application.recipes.RecipesActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_recipes_recipes_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_recipe" />

    <TextView
        android:id="@+id/activity_recipes_error_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/error"
        android:textSize="@dimen/activity_recipes_error_tv_text_size"
        android:visibility="gone" />
</android.support.constraint.ConstraintLayout>
