<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/fragment_step_details_video_pv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        app:auto_show="false" />

    <ImageView
        android:id="@+id/fragment_step_details_thumbnail_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/fragment_step_details_video_pv" />

    <TextView
        android:id="@+id/fragment_step_details_description_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/medium_padding"
        app:layout_constraintTop_toBottomOf="@id/fragment_step_details_thumbnail_iv"
        tools:text="Recipe Introduction" />
</android.support.constraint.ConstraintLayout>
